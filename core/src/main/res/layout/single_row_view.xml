<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.example.core.viewmodel.NewsViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{model::onClickRow}"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="5dp">

            <!-- Text Notice Name -->
            <TextView
                android:id="@+id/txt_notice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@={model.title}"
                android:textStyle="bold" />

            <!-- Text Notice Description -->
            <TextView
                android:id="@+id/txt_notice_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={model.descriptionUrl}"
                android:padding="3dp" />

            <!-- Text Notice FilePath -->
            <TextView
                android:id="@+id/txt_notice_file_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={model.image}"
                android:padding="3dp"

                android:textSize="12sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</layout>